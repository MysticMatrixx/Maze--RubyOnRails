<div>
  <div class="d-flex align-items-stretch">

    <%= render 'user/session_sidebar_manager' %>

    <div class="col-10 bg-white">
        <div style="padding: 10px; margin-top: 1rem; background-color: #F9FAFB; border-radius: 17px;">
          <div class="container-fluid" style="padding: 25px; border-radius: 16px">
            <h4>Edit Your <%= resource_name.to_s.humanize %> Profile</h4>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

                <div class="d-flex">
                  <div class="field">
                    <%= f.label :first_name, as: 'First Name'%><br>
                    <%= f.text_field :first_name, autocomplete: "first_name", class:'inputx' %>
                  </div>

                  <div class="field" style="margin-left: 4rem">
                    <%= f.label :last_name, as: 'Last Name' %><br>
                    <%= f.text_field :last_name, autocomplete: "last_name", class:'inputx' %>
                  </div>
                </div>

              <div class="d-flex" style="margin-top: 1rem">
                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'inputx' %>
                </div>

                <div class="field" style="margin-left: 4rem">
                   <%= f.label :phone, as: 'Phone No.' %><br>
                  <%= f.phone_field :phone, autofocus: true, autocomplete: "phone", class:'inputx' %>
                </div>
              </div>

              <div class="d-flex" style="margin-top: 1rem">
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="field">
                  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                  <%= f.password_field :password, autocomplete: "new-password", class:'inputx' %>
                  <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>

                <div class="field" style="margin-left: 2rem">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'inputx' %>
                </div>
              </div>

              <div class="field" style="margin-top: 1rem">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class:'inputx' %>
              </div>

              <div class="actions" style="margin-top: 0.4rem">
                <%= f.submit "Update", class:'btn btn-outline-success' %>
              </div>
            <% end %>

            <h4 style="margin-top: 1.5em">Don't need anymore?</h4>

            <p><%= button_to "Delete my account", registration_path(resource_name), class:'btn-outline-danger', data: { confirm: "Are you sure?" }, method: :delete %></p>

          </div>
        </div>
      </div>

  </div>
</div>
