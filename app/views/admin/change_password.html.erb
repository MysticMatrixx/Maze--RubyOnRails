<div class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">

      <h4>Reset User Password</h4>
      <small style='text-align:center'>
        <%= render 'layouts/pop_ups' %>
      </small>
      <%= form_with scope: @user, url: update_password_user_path(@user), html: { method: :patch } do |f| %>

      <div class="field pt-4">
      <%= f.label :password %><i> (mininum : 6 characters)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:'inputx' %>
      </div>

      <div class="field" style="margin-top: 1rem">
      <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'inputx' %>
      </div>

      <div class="actions" style="margin-top: 1rem">
        <%= f.submit "Update Password", class:'btn btn-outline-success w-25' %>
      </div>

      <div class="actions" style="margin-top: 1rem">
        <%= link_to 'Cancel', admin_manager_menu_path, class:'btn btn-default w-25' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
