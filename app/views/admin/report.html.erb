<style>
  .mast {
      text-align: center;
      margin-left: 2.5rem;
      border-radius: 30px;
      background-color: #fff;
      width: 22%
  }

  .dekhsize {
    font-weight: 700;
  }

  .trash {
      color: #9FA0A3;
  }

  .meh, h5 {
      color: #4F5B67;
      font-family: Mulish;
  }

  .meh label {
      font-size: 18px;
      font-weight: 600;
  }

  .meh input {
      background-color: #F9FAFB;
  }

</style>


<!--This is need to import a CSV-->
<%#=link_to 'Export to CSV', create_report_path(format: 'csv')%>


<!--import function is not yet built-->
